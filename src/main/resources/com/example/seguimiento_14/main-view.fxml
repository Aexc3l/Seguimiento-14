<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox focusTraversable="true" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.seguimiento_14.controller.MainController">
    <TableView fx:id="financeTable" editable="true" fixedCellSize="2.0" prefWidth="248.0" stylesheets="@../../../style.css" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="typeColumn" minWidth="100.0" prefWidth="170.0"  text="Type" />
            <TableColumn fx:id="amountColumn" minWidth="100.0" prefWidth="170.0"  text="Value" />
            <TableColumn fx:id="descriptionColumn" minWidth="100.0" prefWidth="170.0"  text="Description" />
         <TableColumn fx:id="dateColumn" minWidth="100.0" prefWidth="170.0"  text="Date" />
        </columns>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
      <cursor>
         <Cursor fx:constant="DEFAULT" />
      </cursor>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
   <Label fx:id="balanceId" text="Balance: ">
      <VBox.margin>
         <Insets left="10.0" />
      </VBox.margin>
      <font>
         <Font name="Courier New" size="19.0" />
      </font>
   </Label>
    <HBox focusTraversable="true" spacing="30.0">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <children>
         <Button fx:id="registerShow" stylesheets="@../../../style.css" text="See Registers" textAlignment="CENTER">
            <font>
               <Font size="13.0" />
            </font>
         </Button>
         <Button fx:id="registerShowC" stylesheets="@../../../style.css" text="See Cost" textAlignment="CENTER">
            <font>
               <Font size="13.0" />
            </font>
         </Button>
         <Button fx:id="registerShowInc" stylesheets="@../../../style.css" text="See Incomes" textAlignment="CENTER">
            <font>
               <Font size="13.0" />
            </font>
         </Button>
         <Button fx:id="homePage" stylesheets="@../../../style.css" text="Main Page" textAlignment="CENTER">
            <font>
               <Font size="13.0" />
            </font>
         </Button>
      </children></HBox>
</VBox>
